<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode, forced to light. -->
    <style name="Theme.AimingFitness" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_primary</item> <!-- Light theme: dark text on primary -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_primary</item> <!-- Light theme: dark text on secondary -->
        <!-- Accent Color -->
        <item name="colorAccent">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> <!-- Light status bar for light theme -->
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item> <!-- Corrected -->
        <item name="colorSurface">@color/surface</item> <!-- Corrected -->
        <item name="colorOnBackground">@color/text_primary</item> <!-- Corrected -->
        <item name="colorOnSurface">@color/text_primary</item> <!-- Corrected -->
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item> <!-- Corrected -->
        <item name="android:textColorSecondary">@color/text_secondary</item> <!-- Corrected -->
        <item name="android:textColorHint">@color/text_hint</item> <!-- Corrected -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item> <!-- Corrected to white, consistent with main light theme -->
        <!-- Custom attributes -->
        <item name="text_label_color">@color/text_label_light</item>
        <item name="input_field_background_color">@color/input_field_background_light</item>
        <item name="button_social_background_color">@color/button_social_background_light</item>
        <item name="button_social_text_color">@color/button_social_text_light</item>
        <item name="icon_tint_color">@color/icon_tint_light</item>
        <item name="text_secondary">@color/text_secondary_detail_light</item> <!-- Custom attribute, uses specific _light color -->
        <item name="text_hint">@color/text_placeholder_light</item> <!-- Custom attribute, uses specific _light color -->
        <!-- Shape styles - usually remain the same -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AimingFitness.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AimingFitness.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AimingFitness.LargeComponent</item>
    </style>

    <!-- You can override specific widget styles for dark mode here if needed -->
    <!-- Example:
    <style name="Widget.AimingFitness.SocialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/surface</item> 
        <item name="strokeColor">@color/text_hint</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    -->
</resources>