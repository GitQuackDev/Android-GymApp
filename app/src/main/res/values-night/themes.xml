<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <!-- This file can be used to override specific theme attributes for dark mode -->
    <!-- if the DayNight parent and color overrides in values-night/colors.xml are not sufficient. -->
    <style name="Theme.AimingFitness" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item> <!-- Will resolve to dm_primary via values-night/colors.xml -->
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/dm_text_primary</item> <!-- Dark theme: light text on primary -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/dm_text_primary</item> <!-- Dark theme: light text on secondary -->
        <!-- Accent Color -->
        <item name="colorAccent">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- Dark status bar for dark theme -->
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/dm_text_primary</item> <!-- Dark theme: light text on error -->
        <!-- Custom attributes -->
        <item name="text_label_color">@color/text_label_dark</item>
        <item name="input_field_background_color">@color/input_field_background_dark</item>
        <item name="button_social_background_color">@color/button_social_background_dark</item>
        <item name="button_social_text_color">@color/button_social_text_dark</item>
        <item name="icon_tint_color">@color/icon_tint_dark</item>
        <item name="text_secondary">@color/text_secondary_detail_dark</item> <!-- Corrected from text_secondary_dark -->
        <item name="text_hint">@color/text_placeholder_dark</item>
        <!-- Shape styles - usually remain the same -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AimingFitness.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AimingFitness.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AimingFitness.LargeComponent</item>
    </style>

    <!-- You can override specific widget styles for dark mode here if needed -->
    <!-- Example:
    <style name="Widget.AimingFitness.SocialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/surface</item> 
        <item name="strokeColor">@color/text_hint</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    -->
</resources>